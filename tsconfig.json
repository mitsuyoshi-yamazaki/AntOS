{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es6",
    "lib": [
      "ES2020",
      "ES2019.Array",
      "dom"
    ],
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "types": [
      "./node_modules/typed-screeps",
      "node"
    ],
    "strict": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/main.ts"
  ],
  "exclude": [
    "node_modules",
    "submodules/private/log/**/*",
    "**/*.test.ts"
  ]
}
